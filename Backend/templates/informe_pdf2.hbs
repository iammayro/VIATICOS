<h1 style="font-size:30px;text-align:center;">INFORME DE ACTIVIDADES</h1>

<table class="tgg" width="500px">
    <tr>
    <th class="tg-uu90">Fecha de elaboración</th>
    </tr>
    <tr>
    <td class="tg-z9od">{{informe.fecha_elaboracion }}</td>
    </tr>
</table>

<table class="tg">
    <tr>
        <th class="tg-vy4e" width="100%" colspan="4">Datos del comisionado</th>
      </tr>
      <tr>
        <td class="tg-55ei" width="50%" colspan="2">Código</td>
        <td class="tg-55ei" width="50%" colspan="2">Dependencia</td>
      </tr>
      <tr>
        <td class="tg-baqh" width="50%" colspan="2">{{informe.codigo}}</td>
        <td class="tg-baqh" width="50%" colspan="2">{{informe.area_adscripcion}}</td>
      </tr>
      <tr>
        <td class="tg-55ei" colspan="4">Nombre</td>
      </tr>
      <tr>
        <td class="tg-0lax" colspan="4">{{informe.nombres}}</td>
      </tr>
</table>

  <table class="tg">
    <tr>
      <th class="tg-vy4e" colspan="4">Datos de la comisión</th>
    </tr>
    <tr>
      <td class="tg-55ei" colspan="4">Nombre</td>
    </tr>
    <tr>
      <td class="tg-baqh" colspan="4">{{informe.nombre_comision}}</td>
    </tr>
    <tr>
      <td class="tg-55ei" width="50%" colspan="2">Lugar</td>
      <td class="tg-098m" width="50%" colspan="2">Tipo</td>
    </tr>
    <tr>
      <td class="tg-baqh" colspan="2">{{destino.nombre}}</td>
      <td class="tg-baqh" colspan="2">{{destino.tipo}}</td>
    </tr>
    <tr>
      <td class="tg-098m" colspan="4">Periodo</td>
    </tr>
    <tr>
      <td class="tg-0lax" width="50%" colspan="2">{{informe.fecha_inicio}}</td>
      <td class="tg-0lax" width="50%" colspan="2">{{informe.fecha_fin}}</td>
    </tr>
</table>

<table class="tg" >
    <tr>
      <th class="tg-ad0n" colspan="4">Objetivos</th>
    </tr>
    <tr>
      <td class="tg-ynlj" colspan="4">{{informe.objetivo_trabajo}}</td>
    </tr>
    <tr>
      <td class="tg-h1nz" colspan="4">Justificación</td>
    </tr>
    <tr>
      <td class="tg-ynlj" colspan="4">{{informe.justificacion}}</td>
    </tr>
</table>

<table class="tg" >
  <tr>
    <th class="tg-jkz3" colspan="4">Programa de trabajo inicial</th>
  </tr>
  <tr>
    <td class="tg-ad0n">#</td>
    <td class="tg-ad0n">Fecha</td>
    <td class="tg-ad0n">Lugar</td>
    <td class="tg-ad0n">Tareas a realizar</td>
  </tr>
  {{#each programa}}
  <tr>
    <td class="tg-3xi5">{{this.id}}</td>
    <td class="tg-0pky">{{this.dia}}</td>
    <td class="tg-c3ow">{{this.lugar_estancia}}</td>
    <td class="tg-0pky">{{this.tareas_realizar}}</td>
  </tr>
  {{/each}}
</table>

<table class="tg">
  <tr>
    <th class="tg-jkz3" colspan="4">Viáticos solicitados</th>
  </tr>
  <tr>
    <td class="tg-ad0n">#</td>
    <td class="tg-ad0n">Fecha</td>
    <td class="tg-ad0n">Concepto</td>
    <td class="tg-ad0n">No. proyecto de apoyo</td>
  </tr>
  {{#each gastos}}
  <tr>
    <td class="tg-3xi5">{{this.id}}</td>
    <td class="tg-0pky">{{this.dia}}</td>
    <td class="tg-c3ow">{{this.rubro}}</td>
    <td class="tg-0pky">{{this.proyecto}}</td>
  </tr>
  {{/each}}
</table>

<table class="tg">
  <tr>
    <th class="tg-jkz3" colspan="4">Itinerario</th>
  </tr>
  <tr>
    <td class="tg-ad0n">#</td>
    <td class="tg-ad0n">Dia</td>
    <td class="tg-ad0n">Origen</td>
    <td class="tg-ad0n">Destino</td>
  </tr>
  {{#each itinerarios}}
  <tr>
    <td class="tg-3xi5">{{this.id}}</td>
    <td class="tg-0pky">{{this.dia}}</td>
    <td class="tg-c3ow">{{this.origen}}</td>
    <td class="tg-0pky">{{this.destino}}</td>
  </tr>
  {{/each}}
</table>

<table class="tg" >
  <tr>
    <th class="tg-jkz3" colspan="5">Agenda</th>
  </tr>
  <tr>
    <td class="tg-ad0n">#</td>
    <td class="tg-ad0n">Fecha</td>
    <td class="tg-ad0n">Hora Inicio</td>
    <td class="tg-ad0n">Hora Fin</td>
    <td class="tg-ad0n">Actividad</td>
  </tr>
  {{#each agendas}}
  <tr>
    <td class="tg-3xi5">{{this.id}}</td>
    <td class="tg-0pky">{{this.dia}}</td>
    <td class="tg-c3ow">{{this.hora_inicio}}</td>
    <td class="tg-0pky">{{this.hora_fin}}</td>
    <td class="tg-0pky">{{this.actividad}}</td>
  </tr>
  {{/each}}
</table>

<table class="tg">
    <tr>
      <th class="tg-ad0n" colspan="4">Resultados</th>
    </tr>
    <tr>
      <td class="tg-ynlj" colspan="4">{{informe.resultados}}</td>
    </tr>
</table>

<table class="tg">
    <tr>
      <th class="tg-ad0n" colspan="4">Observaciones</th>
    </tr>
    <tr>
      <td class="tg-ynlj" colspan="4">{{informe.observaciones}}</td>
    </tr>
</table>

<table class="tg">
    <tr>
      <th class="tg-ad0n" colspan="4">Firmas</th>
    </tr>
    <tr>
      <td class="tg-signature" colspan="2">Firma del comisionado</td>
      <td class="tg-signature" colspan="2">Vo. Bo. de Autorización</td>
    </tr>
</table>