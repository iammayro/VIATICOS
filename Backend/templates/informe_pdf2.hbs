    .tg .tg-55ei{font-weight:bold;font-size:14px;background-color:#d2cbcb;text-align:center;vertical-align:top}
    .tg .tg-098m{font-weight:bold;background-color:#d2cbcb;text-align:center;vertical-align:top}
    .tg .tg-baqh{text-align:center;vertical-align:top}
    .tg .tg-0lax{text-align:center;vertical-align:top}
